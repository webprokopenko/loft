extends ../layouts/main_layout.pug

block link
	-var selected = 'Мои работы';
	

block title
	title= title 

block content
	section.aboutbox
		.aboutbox-header Мои работы
		.aboutbox-body.clearfix
			.projects-wrapper
				.projects-list
					//- Проект 1
					li.projects-item
						.hover-img
							img.project-img(src="img/work/loftblog.jpg", alt="loftblog.ru")
							.zoom-wrapper
								a.zoom-link(href="http://loftblog.ru/", target="_blank") loftblog.ru
						a.project-link(href="http://loftblog.ru/", target="_blank") loftblog.ru
						.project-desc Сайт с уроками по web разработке
					//- Проект 2
					li.projects-item
						.hover-img
							img.project-img(src="img/work/itloft.jpg", alt="itloft.ru")
							.zoom-wrapper
								a.zoom-link(href="http://itloft.ru/", target="_blank") itloft.ru
						a.project-link(href="http://itloft.ru/", target="_blank") itloft.ru
						.project-desc Сайт агенства интернет решений itloft
					//- Проект 3
					li.projects-item
						.hover-img
							img.project-img(src="img/work/landingsloft.jpg", alt="landingsloft.ru")
							.zoom-wrapper
								a.zoom-link(href="http://landingsloft.ru/", target="_blank") landingsloft.ru
						a.project-link(href="http://landingsloft.ru/", target="_blank") landingsloft.ru
						.project-desc Сайт по разработке лендингов с гарантией
					//- Проект 4
					li.projects-item
						.hover-img
							img.project-img(src="img/work/kovalchuk.png", alt="kovalchuk.us")
							.zoom-wrapper
								a.zoom-link(href="http://kovalchuk.us/", target="_blank") kovalchuk.us
						a.project-link(href="http://kovalchuk.us/", target="_blank") kovalchuk.us
						.project-desc Личный сайт Дмитрия Ковальчука
					//- Проект 5
					li.projects-item
						.hover-img
							img.project-img(src="img/work/loftschool.png", alt="loftschool.com")
							.zoom-wrapper
								a.zoom-link(href="http://loftschool.com/", target="_blank") loftschool.com
						a.project-link(href="http://loftschool.com/", target="_blank") loftschool.com
						.project-desc Школа онлайн образования
					//- Добавить проект
					if(isAdmin)
							li.projects-item.add-new-item
								a.add-new-link#add-new-item(href="#")
									.add-new-text Добавить проект
					//- Изображения из базы	
					- var values = [];
					ul
  						each val in values
    						li= val
  						else
    						li There are no values							
							
	include ../common/popup.pug
